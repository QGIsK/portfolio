{
  "env": {
    "node": true
  },
  "extends": ["airbnb-base", "plugin:security/recommended", "plugin:prettier/recommended", "plugin:import/recommended"],
  "plugins": [ "security", "prettier", "import"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@root",
            "./"
          ],
          [
            "@database",
            "./database"
          ],
          [
            "@helpers",
            "./helpers"
          ],[
            "@routes",
            "./routes"
          ],[
            "@middleware",
            "./middleware"
          ],
          [
            "@components",
            "./client/src/components"
          ]
        ]
      }
    }
  },
  "rules": {
    "no-console": "error",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "security/detect-object-injection": "off"
  }
}
